# =============================================================================
# Supabase Configuration
# =============================================================================
# Your Supabase project URL (e.g., https://your-project-ref.supabase.co)
SUPABASE_URL=https://your-project-ref.supabase.co

# Anonymous key - safe for client-side use, respects RLS policies
SUPABASE_ANON_KEY=your-anon-key-here

# Service role key - for backend admin operations, bypasses RLS
# ⚠️ KEEP THIS SECRET - never expose to client-side
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Database Connection
# =============================================================================
# Direct PostgreSQL connection string from Supabase
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# Database Pool Settings (optimized for Supabase)
# =============================================================================
# Supabase free tier: max 2 connections, Pro tier: max 15 connections
# Keep pool_size + max_overflow within your plan limits
DATABASE_POOL_SIZE=3
DATABASE_MAX_OVERFLOW=2
DATABASE_POOL_RECYCLE=300
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# JWT Configuration
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Email Configuration
# =============================================================================
# Email provider: "sendgrid" or "resend"
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@armentum.com

# App URL for email links
APP_URL=http://localhost:5173

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=True
ENVIRONMENT=development
